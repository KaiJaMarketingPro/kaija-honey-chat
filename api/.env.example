##########################
# 🌍 KaiJa GPT-Ökosystem
# .env.example – bitte niemals echte Daten committen!
##########################

### 🔐 Azure OpenAI
AZURE_OPENAI_KEY=
AZURE_OPENAI_ENDPOINT=https://kaija-openai.openai.azure.com
AZURE_OPENAI_VERSION=2024-04-09
AZURE_OPENAI_DEPLOYMENT=honey-gpt

### 🛡 Admin Bereich
ADMIN_SECRET_TOKEN=

### 📩 Gmail SMTP (für transaktionale Mails)
GMAIL_USER=
GMAIL_PASS=

### 💌 Brevo (nur für Marketing, z. B. Newsletter)
BREVO_API_KEY=
BREVO_SENDER_NAME=
BREVO_SENDER_EMAIL=

### 💳 Stripe Checkout (Abo-Flow)
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID_SIGNATURE=
STRIPE_PRICE_ID_COACHING=

### 🔁 Make / Webhook Logging
MAKE_WEBHOOK_URL=

### 🎨 Optional: Freepik API (nur falls Key aktiv)
FREEPIK_API_KEY=

### 📄 Optionale Integrationen
GOOGLE_SHEET_ID=
VOICE_API_KEY=
CRM_API_KEY=

### ⚙️ Runtime Einstellungen
NODE_ENV=production
CACHE_DISABLED=true

