  <label for="month">Monat:</label>
  <select id="month">
    <option value="2025-05">Mai 2025</option>
    <option value="2025-04">April 2025</option>
    <option value="2025-03">MÃ¤rz 2025</option>
  </select>

  <button onclick="loadKPI()">ðŸ“Š Laden</button>

  <div class="chart-container">
    <canvas id="kpiChart"></canvas>
  </div>

  <a id="csvDownload" class="csv-link" href="#" download="kpi-export.csv" style="display:none;">ðŸ“¥ CSV herunterladen</a>

  <script>
    let chart;

    async function loadKPI() {
      const cluster = document.getElementById('cluster').value;
      const month = document.getElementById('month').value;
      const response = await fetch(`/api/kpi-summary.js?cluster=${cluster}&month=${month}`);
      const data = await response.json();

      const filtered = data.clusters.filter(c => cluster === 'all' || c.cluster === cluster);
      const labels = filtered.map(c => c.gpts.join(', '));
      const usage = filtered.map(c => c.calls);
      const score = filtered.map(c => c.qualityScore);

      if (chart) chart.destroy();

      chart = new Chart(document.getElementById('kpiChart'), {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [
            {
              label: 'Nutzungen',
              data: usage,
              backgroundColor: 'rgba(124, 58, 237, 0.6)',
              yAxisID: 'y',
            },
            {
              label: 'QualitÃ¤ts-Score',
              data: score,
              backgroundColor: 'rgba(34, 197, 94, 0.6)',
              yAxisID: 'y1',
            }
          ]
        },
        options: {
          responsive: true,
          scales: {
            y: {
              type: 'linear',
              position: 'left',
              title: { display: true, text: 'Nutzungen' }
            },
            y1: {
              type: 'linear',
              position: 'right',
              title: { display: true, text: 'Score (1â€“10)' },
              min: 0,
              max: 10,
              grid: { drawOnChartArea: false }
            }
          }
        }
      });

      // CSV download Ã¼ber Header Base64
      const csvBase64 = response.headers.get('X-CSV-Download');
      if (csvBase64) {
        const blob = new Blob([atob(csvBase64)], { type: 'text/csv' });
        const url = URL.createObjectURL(blob);
        const link = document.getElementById('csvDownload');
        link.href = url;
        link.style.display = 'block';
      }
    }
  </script>
</body>
